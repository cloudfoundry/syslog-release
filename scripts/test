#!/bin/bash

set -euxo pipefail

pushd "$(dirname "$0")/.."
  bosh create-release --force --version="$(date "+%s")"
  bosh upload-release
popd

bosh upload-stemcell https://bosh.io/d/stemcells/bosh-google-kvm-ubuntu-xenial-go_agent
pushd "$(dirname "$0")/../tests"
  go install github.com/onsi/ginkgo/ginkgo@latest
  ginkgo -r -nodes=2 "$@"
popd
